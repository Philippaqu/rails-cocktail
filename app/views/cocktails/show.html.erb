


<h2><%= @cocktail.name %></h2>

<div class="container">
  <% if @cocktail.photo == nil %>
  <% photo_url = 'drink.jpg' %>
  <% else %>
  <% photo_url = cl_image_path @cocktail.photo.path, height: 180, width: 240, crop: :fill %>
  <% end %>
  <img src="<%= image_path photo_url %>" alt="Picture" class="picture-show">

    <h3>List of ingredients:</h3>
    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li><%=
        dose.description %> of <%= dose.ingredient.name %>
        <%= link_to "Remove this dose", dose_path(id: dose.id), method: :delete %>
      </li>
      <% end %>
    </ul>
    <%= link_to "Add dose", new_cocktail_dose_path(@cocktail) , class: "btn btn-success" %>
    <%= link_to 'Back', cocktails_path, class: "btn btn-primary" %>
  </div>
</div>






